<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="icon" type="image/x-icon" href="~/Images/Amazon_icon.png">
    @*Open Sans font*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

    <style>

        .page-top {
            display: grid;
            grid-template-columns: 150px auto 300px;
            height: 65px;
            background-color: #131921;
            color: white;
        }

        .nav-left {
            display: flex;
            justify-content: center;
        }

        #Logo {
            width: 75%;
            height: fit-content;
            padding: 14px;
        }
        #Logo:hover {
            width: 75%;
            height: fit-content;
            border: 2px solid white;
        }

        .nav-fill {
            display: flex;
            justify-content: center;
            padding-top: 18px
        }

        .nav-right {
            display: flex;
            justify-content: center;
        }
        #nav-tools {
            display: flex;
            flex-direction: row;
            padding-top: 21px;
        }
        .nav-div {
            margin-left: 20px;
            color: white;
        }

        .nav-right-func {
            text-decoration: none;
            color: white;
            font-family: Calibri;
            padding: 15px;
        }

        .nav-right-func:hover, .nav-right-func:active {
            border: 2px solid white;
        }

        .nav-right-func:visited {
            border: 2px solid white;
        }

        #SearchBar {
            width: 90%;
            height: 25px;
            border: none;
        }

        #SearchSubmit {
            width: 3%;
            height: 27px;
            background-color: orange;
            border: none;
        }

            #SearchSubmit:hover {
                background-color: coral;
            }

            #SearchSubmit:active {
                border: 4px solid orange;
                background-color: coral;
            }

        .page-body, .page-footer /*Open Sans font*/ {
            font-family: "Open Sans", sans-serif;
            font-optical-sizing: auto;
            font-weight: 400;
            font-style: normal;
            font-variation-settings: "wdth" 100;
        }

        #page-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 90%;
            margin: auto;
        }

        #content {
        }



        .page-footer {
            display: flex;
            justify-content:center;
            
            height: 500px;
            background-color: #131921;
            color: white;
        }
    </style>

</head>

<body style="margin: 0; background-color: #E3E6E6; ">
    <div class="AmazonWeb">
        <div class="page-top">
            <div class="nav-left">
                <img id="Logo" src="~/Images/White-Amazon-Logo-PNG-HD-Quality.png" />
            </div>
            <div class="nav-fill">
                <input type="text" id="SearchBar" name="SearchBar" />
                <input id="SearchSubmit" type="submit" value="Go">
            </div>
            <div class="nav-right">
                <div id="nav-tools">
                    <div class="nav-div" id="yourAcc">
                        <a class="nav-right-func" href="#">Your account</a>
                    </div>
                    <div class="nav-div" id="helpSec">
                        <a class="nav-right-func" href="#">Help</a>
                    </div>
                    <div class="nav-div" id="Cart">
                        <a class="nav-right-func" href="#">Cart</a>

                    </div>
                </div>
            </div>
        </div>
        <div class="page-body">
            <div id="page-content">
                @RenderBody()
            </div>
        </div>
        <div class="page-footer">
            gegreer
        </div>
    </div>
</body>
</html>
